FROM node:16-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY services/package*.json ./
RUN npm install

# Copy service code
COPY services/ ./

# Set environment variables
ENV NODE_ENV=production
ENV SERVICE_NAME=api-service
ENV PORT=3000

# Expose the service port
EXPOSE ${PORT}

# Start the service
CMD ["node", "index.js"]