FROM node:16-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY services/auth/package*.json ./
RUN npm install

# Copy service code
COPY services/auth/ ./

# Install Permit.io SDK
RUN npm install permit-node --save

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3000

# Expose the service port
EXPOSE ${PORT}

# Start the service
CMD ["node", "index.js"]